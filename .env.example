# =========================
# Application
# =========================
APP_NAME=genai-image-preset
ENV=development
DEBUG=true

# =========================
# Server
# =========================
HOST=0.0.0.0
PORT=8000

# =========================
# Gemini API
# =========================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# =========================
# File Upload Limits
# =========================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# =========================
# Paths
# =========================
UPLOAD_DIR=uploads
OUTPUT_DIR=generated
PRESET_DIR=presets
TEMP_DIR=tmp

# =========================
# Image Processing Defaults
# =========================
IMAGE_MAX_WIDTH=4096
IMAGE_MAX_HEIGHT=4096

# =========================
# Preset Engine Safety
# =========================
CLAMP_EXPOSURE_MIN=-1.0
CLAMP_EXPOSURE_MAX=1.0
CLAMP_TEMPERATURE_MIN=-20
CLAMP_TEMPERATURE_MAX=20
CLAMP_TINT_MIN=-10
CLAMP_TINT_MAX=10

# =========================
# Logging
# =========================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
